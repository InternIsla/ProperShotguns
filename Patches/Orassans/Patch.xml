<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Orassans</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAddModExtension">
                    <xpath>*/ThingDef[defName="Bullet_OrassanShotgun"]</xpath>
                    <value>
                        <li Class="ProperShotguns.ShotgunExtension">
                            <pelletCount>7</pelletCount>
                        </li>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>*/ThingDef[defName="Bullet_OrassanShotgun"]/graphicData/texPath</xpath>
                    <value>
                        <texPath>Things/Projectile/Bullet_Small</texPath>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>*/ThingDef[defName="Gun_OrassanShotgun"]/verbs/li/verbClass</xpath>
                    <value>
                        <verbClass>ProperShotguns.Verb_ShootShotgun</verbClass>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>